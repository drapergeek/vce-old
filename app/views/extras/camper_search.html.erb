<h2><%= @header_text %></h2>

<!--search form-->
<% form_tag :action=>'search', :method => 'get' do %>
<p>
	<%= text_field_tag :search , params[:search]%>
	<%= submit_tag "Search", :name=>nil %>
	<% if params[:search] %>
		<%= link_to 'Show All', :action=>'list' %>
	<% end %>
</p>
<% end %>

<!--End Search form-->

<table>
  <tr>
	<th>Camper ID</th>
	<th>Last</th>
	<th>First</th>
	<th>Position</th>
  </tr>
<% for camper in @campers %>
  <tr>
	<td><%= camper.number %></td>
	<td><%= camper.lname %></td>
	<td><%= camper.fname %></td>
	<td><%= camper.position_text %></td>
    <td><%= link_to 'Show', :action => 'show', :id => camper %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => camper %></td>
    <td><%= link_to 'Delete', { :action => 'destroy', :id => camper }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>


