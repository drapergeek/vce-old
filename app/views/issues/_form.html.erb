<% form_for @issue do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :ignore %><br />
    <%= f.check_box :ignore %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
