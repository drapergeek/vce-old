	<%= content_tag :div, :id=>"camper#{camper}_collage_links" , :class=>"camper_collage_links" do %>	
	<%= content_tag :div, :id=>"camper#{camper}_collage_add_link_div", :class=>"camper#{camper}_collage_add_link_div" do %>
	<%= link_to_function "Add Collage for Camper #{camper}", nil, :id=>"camper#{camper}_collage_add_link" do |page| 
				page <<"var camp_price = parseInt(document.getElementById('receipt_amount').value);"
				page <<"document.getElementById('receipt_amount').value = (camp_price+20);"
				page["receipt_camper#{camper}_collage"].checked = "checked"
				page[:receipt_amount].visual_effect :pulsate
				page[:receipt_amount].visual_effect :highlight
				#hide the current link
				page["camper#{camper}_collage_add_link_div"].visual_effect :fade
				page["camper#{camper}_collage_remove_link_div"].visual_effect :appear
		end%>
	<% end %>
	<%= content_tag :div, :id=>"camper#{camper}_collage_remove_link_div", :class=>"camper#{camper}_collage_remove_link_div", :style=>"display:none" do %>
	<%= link_to_function "Remove Camper #{camper} Collage", {:style=>"display:none"}, :id=>"camper#{camper}_collage_remove_link" do |page| 
			page <<"if(document.getElementById('receipt_camper#{camper}_collage').checked){"
				page <<"var camp_price = parseInt(document.getElementById('receipt_amount').value);"
				page <<"document.getElementById('receipt_amount').value = (camp_price-20);"
				page["receipt_camper#{camper}_collage"].checked = ""
				page[:receipt_amount].visual_effect :pulsate
				page[:receipt_amount].visual_effect :highlight
				page["camper#{camper}_collage_remove_link_div"].visual_effect :fade
				page["camper#{camper}_collage_add_link_div"].visual_effect :appear
			page<<"}"
		end%>
	<% end %>
	
	<%= f.input "camper#{camper}_collage", :label=>"Camper #{camper} Collage", :wrapper_html=>{:style=>"display:none"} %>
	<% end %>
