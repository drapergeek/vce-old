<h2>Listing buses</h2>

<table>
  <tr>
  <% for column in Bus.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for bus in @buses %>
  <tr class="<%= cycle("even", "odd") %>">
  <% for column in Bus.content_columns %>
    <td><%=h bus.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => bus %></td>
	<td><%= link_to 'Add Campers', :action => 'add_campers', :id => bus %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => bus %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => bus }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @buses %>
<br />

