<%= semantic_form_for @camper do |f| %>
  <%= render "shared/error_messages", :target=>@camper %>
  <%= f.inputs  "General Information" do %>
  <%= f.input :position, :as=>:select, :collection=>Camper::POSITIONS %>
  <%= f.input :number %>
  <%= f.input :lname, :label=>"Last Name" %>
  <%= f.input :fname, :label=>"First Name" %>
  <%= f.input :mname, :label=>"Middle Name" %>
  <%= f.input :pref_name, :label=>"Preferred Name" %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :state, :as=>:select, :collection=>Camper::US_STATES %>
  <%= f.input :zip %>
  <%= f.input :phone1, :label=>"Home Phone" %>
  <%= f.input :gender, :as=>:select, :collection=>["Male","Female"] %>
  <%= f.input :race, :as=>:select, :collection=>Camper::RACES %>
  <%= f.input :shirt_size, :as=>:select, :collection=>Camper::SHIRT_SIZES %>
  <% end %>
  <%= f.inputs "School Information" do  %>
  <%= f.input :school, :as=>:select, :collection=>School.all.map(&:name) %>
  <%= f.input :grade, :as=>:select, :collection=>Camper::GRADES %>
  <%= f.input :teacher %>
  <% end %>
  <%= f.inputs "Other Information" do %>
    <%= f.input :dob, :label=>"Birthdate",:start_year => Time.now.year, :end_year=>Time.now.year-79 %>
  <%= f.input :roomate_choice %>
  <% end %>
  <%= f.inputs "Contact Information" do %>
    <h3>Mother</h3>
    <%= f.input :mother_name %>
    <%= f.input :mother_phone %>
    <%= f.input :mother_email %>
    <h3>Father</h3>
    <%= f.input :father_name %>
    <%= f.input :father_phone %>
    <%= f.input :father_email %>
    <h3>Guardian</h3>
    <%= f.input :guardian_name %>
    <%= f.input :guardian_phone %>
    <%= f.input :guardian_email %>
  <% end %>
  <%= f.inputs "Medical Information" do %>
    <%= f.input :last_tetnus_shot, :start_year => Time.now.year, :end_year => 1990 %>
    <%= f.input :physician_insurance_info %>
    <%= f.input :emergency_info %>
    <%= f.input :immunizations_current %>
    <%= f.input :release_authorization %>
    <%= f.input :health_concerns %>
  <% end %>
  <%= f.inputs "Counselors" do %>
    <%= f.input :pool_spotting, :as => :select, :collection => Camper::POOL_SPOTTING %>
    <%= f.input :counselor_years %>
    <%= f.input :rec_zone, :as => :select, :collection => Camper::REC_ZONES %>
    <%= f.input :mobile_phone %>
    <%= f.input :references_returned %>
    <%= f.input :picture %>
  <% end %>
  <%= f.inputs "Paperwork" do %>
    <%= f.input :code_of_conduct %>
    <%= f.input :parental_signatures %>
    <%= f.input :media_release, :as=>:select, :collection=>Camper::MEDIA_RELEASE %>
    <%= f.input :equine_release %>
  <% end %>
  <%= f.inputs "Office Use Only" do %>
    <%= f.input :room %>
    <%= f.input :bus %>
    <%= f.input :collage_count %>
  <% end %>
  <%= f.actions %>
<% end %>
