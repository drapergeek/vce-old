<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<title>4 - H Camp Control Center</title>
<meta http-equiv="Content-type" content="text/html; charset=utf-8" />

<%= stylesheet_link_tag 'standard' %>
<%= stylesheet_link_tag 'print', :media=>'print' %>
<%= javascript_include_tag :defaults %>
<!--[if lte IE 7]>
<link href="/stylesheets/patches/patch_my_layout.css" rel="stylesheet" type="text/css" />
<![endif]-->


<script type="text/javascript">
  function ChangeColor(tableRow, highLight)
  {
  if (highLight)
  {
    tableRow.style.backgroundColor = '#38ff99';
  }
  else
  {
	if(tableRow.className == 'odd')
    	{tableRow.style.backgroundColor = 'white';}
	else
		{tableRow.style.backgroundColor = '#93b2ff';}
  }
}
function DoNav(theUrl)
{
	document.location.href = theUrl;
}
</script>




</head>
<body>
	<!--THIS IS A TEST-->
  <div id="page_margins">
	
    <div id="border-top">
      <div id="edge-tl"></div>
      <div id="edge-tr"></div>
    </div>
    <div id="page">
      <div id="header">
	
		
        <div id="topnav">
          <!-- start: skip link navigation -->
          <a class="skip" title="skip link" href="#navigation">Skip to the navigation</a><span class="hideme">.</span>
          <a class="skip" title="skip link" href="#content">Skip to the content</a><span class="hideme">.</span>
          <!-- end: skip link navigation -->

		<!--normal links for header-->
		<% if logged_in? %>
			<!--search form-->
			<form action="receipts/search?method=get" method="post" style="display:inline">
				<input id="search" name="search" type="text"  />
				<input type="submit" value="Search" />
			</form>

			<!--End Search form-->
			
			Welcome <%= current_user.login %>! | 
			<%= link_to 'Profile', {:controller=>'account', :action=>'edit', :id=>current_user} %> |
			<%= link_to 'Logout', {:controller=>'account', :action=>'logout'} %> 
		<% end %>
		<!--End the normal links-->
        </div>
		
			<%= image_tag 'banner.gif', :alt=>'The VCE banner featuring the VT logo' , :class=>"show_on_print"%>
      </div>
      <div id="nav">
        <!-- skiplink anchor: navigation -->
        <a id="navigation" name="navigation"></a>
        <div id="nav_main">
		<% if logged_in? %>
          <!-- main navigation: #nav_main -->
			<%= render :partial=>'layouts/main_links' %>
		<% end %>
        </div>
      </div>
      <div id="main">
        <div id="col1" class="show_on_print">
          <div id="col1_content" class="clearfix">
	
	
	
            <% unless current_announcements.empty?  %>
			<!--Announcement begin-->
			<div id="announcement">
				<% for annoucement in current_announcements %>
					<p><%= annoucement.message %></p>
					
				<% end %>	
				<%= link_to_remote "Hide This Message", :url=> "javascripts/hide_announcement" %>			
			</div>
			<!--Announcement End-->
			<% end %>
			
			

<!--This is the beginning of the content-->
<% flash.each do |key, msg| %>
	<%= content_tag :div, msg, :id=>key %>
<% end %>
<%= yield %>
<!--This is the end of the content-->

          </div>
        </div>
        <div id="col3">
          <div id="col3_content" class="clearfix">
			<% if logged_in? %>
				<%= render :partial=>'layouts/statistics' %>
			<% end %>
          </div>
          <!-- IE Column Clearing -->
          <div id="ie_clearing"> &#160; </div>
        </div>
      </div>
      <!-- begin: #footer -->
      <div id="footer">
	
	Â© Copyright 2008 Virginia Cooperative Extension Office.  All Rights Reserved. Lead Developer: Jason Draper
      </div>
    </div>
    <div id="border-bottom">
      <div id="edge-bl"></div>
      <div id="edge-br"></div>
    </div>
  </div>
</body>
</html>
