<h2>Listing courses</h2>

<table>
  <tr>
  <% for column in Course.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for course in @courses %>
  <tr class="<%= cycle("even", "odd") %>">
  <% for column in Course.content_columns %>
    <td><%=h course.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => course %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => course %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => course }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @courses %>

<%= link_to 'New course', :action => 'new' %>
