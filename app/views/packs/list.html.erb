<h2>Listing packs</h2>

<table>
  <tr>
  <% for column in Pack.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for pack in @packs %>
  <tr class="<%= cycle("even", "odd") %>">
  <% for column in Pack.content_columns %>
    <td><%=h pack.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => pack %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => pack %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => pack }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @packs %>
<br />

<%= link_to 'New pack', :action => 'new' %>
