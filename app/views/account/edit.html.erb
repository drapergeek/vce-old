<%= render "shared/error_messages", :target=>@user %>

<% form_for :user, @user, :url=>{:action => 'update', :id=>@user.id}, :html=> {:multipart => true} do |u| %> 


<p><label for ="fname">First Name: </label>
	<%= u.text_field  'fname' %>
</p>
<p><label for ="lname">Last Name: </label>
	<%= u.text_field 'lname' %>
</p>

<p><label for ="title">Title: </label>
	<%= u.text_field 'title' %>
</p>



<p><label for="user_picture">Picture:</label><br /> 
	<% unless @user.picture.blank? %>
		<%= image_tag(url_for({:controller=>'account',:action => 'image', :id => @user.id})) -%>
  	<% end %>
	<br />
<%= u.file_field 'pictureimg' %></p>

<p><label for="unit_d">Unit: </label><br/>
<%= u.collection_select  'unit_id', @units, 'id' , 'name'%></p>

<p><label for="login">Login</label><br/>
<%= u.text_field  'login' %></p>


<% for role in Role.all %>
	<div>
		<%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
		<%= role.name %>
	</div>
<% end %>

<p><%= submit_tag 'Update' %></p>
<% end %>
